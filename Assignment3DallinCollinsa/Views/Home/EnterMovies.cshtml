
@{
    ViewBag.Title = "Enter Movies";
}

@model Assignment3DallinCollinsa.Models.EnterMoviesModel

<form method="post">

    <label asp-for="category">Category:</label>
    <input asp-for="category" />
    <br />
    <label asp-for="title">Title:</label>
    <input asp-for="title" />
    <br />
    <label asp-for="year">Year:</label>
    <input asp-for="year" />
    <br />
    <label asp-for="director">Director:</label>
    <input asp-for="director" />
    <br />
    <label asp-for="rating">Rating:</label>
    <select asp-for="rating">
        <option></option>
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="edited">Edited:</label>
    <label asp-for="edited">Yes</label><input asp-for="edited" type="radio" name="YesNo" value="Yes"/>
    <label asp-for="edited">No</label><input asp-for="edited" type="radio" name="YesNo" value="No"/>
    <br />
    <label asp-for="lentTo">Lent To:</label>
    <input asp-for="lentTo" />
    <br />
    <label asp-for="notes">Notes:</label>
    <input asp-for="notes" />

    <button type="submit">Save</button>
    <div asp-validation-summary="All"></div>
</form>
